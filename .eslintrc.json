{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "no-unused-vars": "off", // Warns for unused variables
    "@typescript-eslint/no-explicit-any": "off", // Warns for 'any' type usage
    "react-hooks/rules-of-hooks": "off", // Enforces rules of Hooks
    "react-hooks/exhaustive-deps": "off", // Warns for missing dependencies in useEffect
    "@typescript-eslint/no-unused-vars": "off", // Ignore unused vars prefixed with an underscore
    "react/react-in-jsx-scope": "off" // Not needed in Next.js
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the React version
    }
  }
}
